<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_passenger_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d415a"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dillichalise.driverdai.PassengerLoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
       android:src="@drawable/bus1" />

    <EditText
        android:id="@+id/pemail"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingStart="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="30dp"
        android:background="@drawable/back"
        android:textColor="#fff"
        android:textColorHint="#bcc6c6"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ppassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pemail"
        android:paddingStart="8dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/back"
        android:ems="10"
        android:hint="******"
        android:inputType="textPassword"
        android:textColor="#fff"
        android:textColorHint="#bcc6c6"
        android:textSize="14sp" />

    <Button
        android:id="@+id/plogin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ppassword"
        android:layout_marginTop="46dp"
        android:background="#009a9c"
        android:elevation="0dp"
        android:onClick="onPLogInClick"
        android:text="Log In"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/psignup"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/plogin"
        android:layout_marginTop="12dp"
        android:background="#009a9c"
        android:onClick="onPRegisterClick"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="normal|bold" />
</RelativeLayout>
