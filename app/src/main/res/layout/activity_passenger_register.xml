<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_passenger_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d415a"
    tools:context="com.example.dillichalise.driverdai.PassengerRegisterActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:background="#2d415a"
                android:src="@drawable/bus1" />

            <EditText
                android:id="@+id/pname"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageButton"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/back"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:textColor="#fff"
                android:textColorHint="#bcc6c6"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/puname"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/pname"
                android:layout_marginBottom="25dp"
                android:background="@drawable/back"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:textColor="#fff"
                android:textColorHint="#bcc6c6"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pmn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/puname"
                android:layout_marginBottom="25dp"
                android:background="@drawable/back"
                android:ems="10"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:paddingStart="8dp"
                android:textColor="#fff"
                android:textColorHint="#bcc6c6"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pemail"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/pmn"
                android:layout_marginBottom="25dp"
                android:background="@drawable/back"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingStart="8dp"
                android:textColor="#fff"
                android:textColorHint="#bcc6c6"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ppassword"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/pemail"
                android:layout_marginBottom="25dp"
                android:background="@drawable/back"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:textColor="#fff"
                android:textColorHint="#bcc6c6"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/preenterpass"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ppassword"
                android:layout_marginBottom="35dp"
                android:background="@drawable/back"
                android:ems="10"
                android:hint="Re-enter Password"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:textColor="#fff"
                android:textColorHint="#bcc6c6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/pregister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/preenterpass"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="22dp"
                android:background="#009a9c"
                android:onClick="onPSignUpClick"
                android:text="Create Account"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pregister"
                android:layout_centerHorizontal="true"
                android:text="Already a member?"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/plogin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/member"
                android:layout_toRightOf="@+id/member"
                android:onClick="onPLoginClick"
                android:text="  Login"
                android:textColor="#0000ff"
                android:textColorLink="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="normal|italic" />


        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
